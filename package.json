    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks",
    "sitemap": "node scripts/generate-sitemap.mjs"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.131.13",
    "isomorphic-dompurify": "^2.15.0",
    "marked": "^12.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "jsdom": "^25.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.6.3",
    "vite": "^7.1.2",
    "vitest": "^2.1.5",
    "zod": "^4.0.17",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint:fix && git add -A",
    "pre-push": "pnpm lint && pnpm build && pnpm test"
  }
